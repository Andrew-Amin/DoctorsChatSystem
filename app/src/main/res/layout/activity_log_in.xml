<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".log_in">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Doctors version ..."
        android:textColor="#fff"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/Login_UserName_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_Password_id"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/ic_action_user"
        android:ems="10"
        android:hint="  Email ..."
        android:inputType="textPersonName"
        android:textColor="#fff"
        android:textColorHighlight="@color/colorPrimary"
        android:textColorHint="#8fff" />


    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_above="@+id/tv_signUp_id"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#402F4F"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:id="@+id/SIGNIN_ID_relative_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/SIGNIN_ID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="SIGN IN"
                android:textColor="#FFF"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_signUp_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_forgetPassword"
        android:layout_marginBottom="5dp"
        android:layout_centerHorizontal="true"
        android:text="sign up"
        android:textColor="#FF517C"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_forgetPassword"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:text="Forgot Password"
        android:textColor="#402F4F"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textStyle="italic" />

    <CheckBox
        android:id="@+id/cb_rememberMe_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/Login_UserName_id"
        android:layout_above="@+id/card_view1"
        android:layout_marginBottom="5dp"
        android:text="Remember me"
        android:textColor="#fff" />

    <EditText
        android:id="@+id/login_Password_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cb_rememberMe_id"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/ic_action_password"
        android:ems="10"
        android:hint="  Password ..."
        android:inputType="textPassword"
        android:textColor="#fff"
        android:textColorHint="#8fff" />

</RelativeLayout>