<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".resetPassword">


    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true"
        android:text="Doctors version ..."
        android:textColor="#fff"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_resetPass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_bg"
        android:text="Send Email"
        android:textColor="#fff"
        android:textAllCaps="false"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/et_resetPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="50dp"
        android:layout_above="@+id/btn_resetPass"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:hint="Enter your Email  . . ."
        android:textColorHint="#8fff" />

    <TextView
        android:id="@+id/textView_dic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="We will mail you a link after when you
provide email and click the send button.
Please click on the link to reset your password"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#fff"
        />

</RelativeLayout>